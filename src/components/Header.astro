import { Button } from "@/components/ui/button";
import { Search, Menu, User, Bell, ShoppingBag, Gamepad2, Zap, BookOpen } from "lucide-react";
import CategoryMegaMenu from './CategoryMegaMenu';

const navLinks = [
  { href: "/deals", label: "Ofertas do Dia", icon: Zap },
  { href: "/categories", label: "Categorias", icon: Menu },
  { href: "/blog", label: "Conte√∫do & Dicas", icon: BookOpen },
];
---

<header class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between gap-4">
    
    {/* Brand */}
    <a href="/" class="flex items-center gap-2 font-extrabold text-xl tracking-tight hover:opacity-80 transition-opacity">
      <div class="bg-primary text-white p-1.5 rounded-lg">
        <Gamepad2 class="w-5 h-5" />
      </div>
      <span class="hidden sm:inline-block">Nerd<span class="text-primary">Ofertas</span></span>
    </a>

    {/* Category Menu */}
    <div class="hidden md:flex">
      <CategoryMegaMenu client:load />
    </div>

    {/* Search Bar (Hidden on mobile, uses full width on desktop) */}
    <div class="hidden md:flex flex-1 max-w-2xl mx-auto relative group">
        <form action="/search" method="GET" class="w-full relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-muted-foreground">
                <Search class="w-4 h-4" />
            </div>
            <input 
                type="text" 
                name="q"
                placeholder="Busque por produto, marca ou categoria..." 
                class="w-full h-10 pl-10 pr-4 rounded-full border border-input bg-muted/50 focus:bg-background ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-0 disabled:cursor-not-allowed disabled:opacity-50 text-sm transition-all focus:shadow-md"
            />
        </form>
    </div>

    {/* Desktop Nav Actions */}
    <div class="flex items-center gap-2">
        
       {/* Mobile Search Toggle (Visible only on small screens) */}
       <Button variant="ghost" size="icon" class="md:hidden text-muted-foreground">
          <Search class="w-5 h-5" />
       </Button>

       <div class="hidden lg:flex items-center gap-1 mr-2">
           {navLinks.map(link => (
               <Button variant="ghost" size="sm" class="text-muted-foreground hover:text-foreground font-medium" asChild>
                   <a href={link.href}>{link.label}</a>
               </Button>
           ))}
       </div>

        <div class="h-6 w-px bg-border hidden sm:block mx-1"></div>

        <Button variant="ghost" size="icon" class="relative text-muted-foreground hover:text-primary transition-colors" title="Alertas">
            <Bell class="w-5 h-5" />
            <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border-2 border-background"></span>
        </Button>

        <Button size="sm" class="font-bold gap-2 hidden sm:flex">
            <User class="w-4 h-4" />
            Entrar
        </Button>
    </div>

  </div>
  
  {/* Mobile Nav (Secondary bar for categories on mobile? or just a drawer implementation in future) */}
</header>
