---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

// Force SSR to ensure we can handle dynamic data later (e.g. latest deals)
export const prerender = false;
---

<Layout 
	title="Nerd Ofertas - O Comparador de Preços para Hardware e Games"
	description="Encontre o melhor preço para Placas de Vídeo, Processadores, Consoles e Jogos. Monitoramos Kabum, Amazon, Pichau, Terabyte e muito mais em tempo real."
>
	<main class="min-h-screen">
		<Hero />
		
		<!-- Placeholder for future sections to keep the page useful during dev -->
		<section class="container mx-auto px-4 py-16">
			<div class="text-center">
				<h2 class="text-2xl font-bold mb-4">Em breve: Ofertas do dia</h2>
				<p class="text-muted-foreground">Estamos indexando milhares de produtos para você.</p>
			</div>
		</section>
	</main>
</Layout>
